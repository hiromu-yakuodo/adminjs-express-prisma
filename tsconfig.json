{
  "compilerOptions": {
    "jsx": "react-jsx", // react-jsx は最新の JSX トランスパイル方式
    "module": "ESNext", // Nodenext ではなく ESNext を推奨
    "target": "ESNext", 
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@lib/*": ["lib/*"]
    },
    "moduleResolution": "node", // "nodenext" から "node" に変更
    "strict": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "incremental": true // インクリメンタルビルドを有効に
  },
  "exclude": [
    "dist",
    ".next",
    "out",
    "scripts",
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}